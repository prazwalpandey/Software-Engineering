<!DOCTYPE html>
<html>
    <head>
      <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet" />
      <%- include('../partials/header'); -%> 
    </head>
    <body>
        <div class="container">
        <form action="/projects" method="post">
            <h1 class="heading">Adding a Project</h1>
            <div class="formcontainer">
                <hr/>
                
                    <input class="boxSize" type="text" name="title" placeholder="Title" required>
                    
                    <input  type="text" name="member[]" placeholder="Member RollNo">
                    <input  type="text" name="member[]" placeholder="Member RollNo">
                    <input  type="text" name="member[]" placeholder="Member RollNo">
                    <input  type="text" name="member[]" placeholder="Member RollNo">
                  
                  
                    <label for="supervisor">Supervisor</label>
                    <select name="supervisor" id="supervisor" required>
                    <option value="">-Supervisor-</option>
    
                     <% supervisors.forEach(supervisor => { %>
                      <option value="<%= supervisor._id %>">
                        <%= supervisor.name %>
                      </option>
                    <% }); %>
                  </select>

                  <label for="cluster">Cluster</label>
                    <select name="cluster" id="cluster" required>
                    <option value="">-Cluster-</option>
    
                     <% clusters.forEach(cluster => { %>
                      <option value="<%= cluster._id %>">
                        <%= cluster.name %>
                      </option>
                    <% }); %>
                  </select>
                    
                  <input type="number" name="year" placeholder=" Year" min="1900" max ="2030" required>
                    <input type="text" name="link"  placeholder="Link" required>
                    <input type="text" name="abstract" placeholder="Abstract" required>
                    <button class="formbutton"> Submit</button>
                </div>
              </form>
              <div class="cancel">
                <a href="/projects""><button >Cancel</button></a>   
              </div>
        </div>
    </body>
    </html>

